{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    // "sourceMap": true,
    // "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./lib",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "app/*": [
        "./app/*"
      ],
      
      "root/*": [
        "./*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "app/types.ts"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "app/**/*"
  ]
}